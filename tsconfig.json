{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"lib": [
			"ESNext",
		],
		"resolveJsonModule": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"allowImportingTsExtensions": false,
		"preserveSymlinks": true,
		"removeComments": false,
		"baseUrl": "./src",
		"paths": {
			"@/*": [
				"*"
			],
		},
	},
	"include": [
		"src/**/*",
		"tests/**/*"
	],
	"exclude": [
		"dist"
	]
}
